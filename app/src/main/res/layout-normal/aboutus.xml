<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/abImg"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="80sp" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lvv"
        android:layout_marginTop="5sp"
        android:layout_below="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/abouts_us_pepole"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lvvv"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"
        android:layout_below="@+id/lvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/serviceTv"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:drawableLeft="@drawable/ic_star_border_black_24dp"
            android:drawableRight="@drawable/ic_star_border_black_24dp"
            android:text="About Us"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5sp"
            android:layout_marginLeft="2sp"
            android:justificationMode="inter_word"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/thred_layout"
        style="@style/DefaultButton"
        android:gravity="center" >
        <TextView
            android:id="@+id/bookId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/place_order"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>
