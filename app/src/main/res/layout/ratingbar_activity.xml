<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="RtlCompat"
        android:minHeight="@dimen/abc_action_bar_default_height_material">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:src="@mipmap/logo" />
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/yellow_shape"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/btnJobID"
                    android:gravity="center"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="80sp"
                    android:layout_marginRight="80sp"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:textColor="@color/white"
                    android:text="JOBID: 123456789"

                    android:background="@drawable/square_shado_shape"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="Order On :"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tvexperID"
                        android:layout_marginLeft="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textStyle="bold"
                        android:text="Wed, 20th September 2019"
                        android:textColor="@color/black" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/blank_border_shape">
                <RelativeLayout
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgID"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/fridge"
                        />
                    <TextView
                        android:id="@+id/nameId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imgID"
                        android:text="Hitachi Air Conditioner"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10sp"/>
                    <TextView
                        android:id="@+id/manufacter"
                        android:layout_marginTop="25sp"
                        android:layout_toRightOf="@+id/imgID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model No : A/C 45896"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10sp"/>
                    <TextView
                        android:id="@+id/modelId"
                        android:layout_below="@+id/manufacter"
                        android:layout_marginTop="5sp"
                        android:layout_toRightOf="@+id/imgID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model No : A/C 45896"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10sp"/>
                    <ImageView
                        android:layout_width="@dimen/drawer_circular_image"
                        android:layout_height="0sp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="310dp"
                        android:layout_marginRight="10sp"
                        android:layout_toRightOf="@+id/modelId"
                        />
                </RelativeLayout>
                <View
                    android:layout_below="@+id/maintananceId"
                    android:layout_marginTop="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                        android:id="@+id/tvNormalID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:textStyle="bold"
                        android:text="Normal Service Charges"
                        android:drawableLeft="@drawable/service_icon"
                        android:layout_marginLeft="10sp"
                        android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/tvAmountID"
                            android:layout_marginLeft="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:drawableLeft="@drawable/rupees"
                            android:text="499"
                            android:textSize="15sp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                        android:id="@+id/tvTimeID"
                        android:textStyle="bold"
                        android:layout_marginLeft="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:drawableLeft="@drawable/watch_later"
                        android:text=" Mon, 27th May 2019, 12:00 P.M."
                        android:textColor="@color/black" />
                    </LinearLayout>
                    <View
                        android:layout_below="@+id/maintananceId"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/PimgId"
                            android:layout_marginLeft="5sp"
                            android:layout_width="@dimen/drawer_circular_image"
                            android:layout_height="@dimen/drawer_circular_image"
                            android:layout_alignParentLeft="true" />
                        <TextView
                            android:id="@+id/TnameId"
                            android:layout_marginTop="5sp"
                            android:layout_toRightOf="@+id/PimgId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:layout_marginLeft="10sp"/>
                        <TextView
                            android:id="@+id/TechId"
                            android:layout_below="@+id/TnameId"
                            android:layout_toRightOf="@+id/PimgId"
                            android:layout_marginTop="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:layout_marginLeft="10sp"/>

                    </RelativeLayout>
                    <View
                        android:id="@+id/viewId"
                        android:layout_below="@+id/maintananceId"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginLeft="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:drawableRight="@drawable/starcolorred"
                            android:text="How much are you satisfied with our service ?"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                        <LinearLayout
                            android:id="@+id/lv1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioGroup
                                android:id="@+id/satisfiygpId"
                                android:gravity="left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/exsatId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Excellent"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <RadioButton
                                    android:id="@+id/goodsatId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Good"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>

                                <RadioButton
                                    android:id="@+id/avgsatId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Average"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                                <RadioButton
                                    android:id="@+id/poorsatId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Poor"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>

                            </RadioGroup>
                        </LinearLayout>
                        <View
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:drawableRight="@drawable/starcolorred"
                            android:text="How well did our Technician behave ?"
                            android:textColor="@color/black" />
                        <LinearLayout
                            android:id="@+id/lv2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioGroup
                                android:id="@+id/behGpId"
                                android:gravity="left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/behextrenId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Extremely well"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <RadioButton
                                    android:id="@+id/behVerywellId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Very well"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>

                                <RadioButton
                                    android:id="@+id/behsomewellId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Somewhat well"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                                <RadioButton
                                    android:id="@+id/behNotwellId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Not so well"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                                <RadioButton
                                    android:id="@+id/behNotatwellId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Not at all well"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>

                            </RadioGroup>
                        </LinearLayout>
                        <View
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:drawableRight="@drawable/starcolorred"
                            android:text="Was the technician on time as per the commitment ?"
                            android:textColor="@color/black" />
                        <LinearLayout
                            android:id="@+id/lv3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioGroup
                                android:id="@+id/techontimeGPId"
                                android:gravity="left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/techyesId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yes"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <RadioButton
                                    android:id="@+id/technoId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                            </RadioGroup>
                        </LinearLayout>
                        <View
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:drawableRight="@drawable/starcolorred"
                            android:text="Was the technician wearing Call2Solv Uniform ?"
                            android:textColor="@color/black" />
                        <LinearLayout
                            android:id="@+id/lv4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioGroup
                                android:id="@+id/techc2SUniGPID"
                                android:gravity="left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/techuniYId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yes"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <RadioButton
                                    android:id="@+id/techUniNoId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                            </RadioGroup>
                        </LinearLayout>
                        <View
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:drawableRight="@drawable/starcolorred"
                            android:text="How responsive have the Technician been to your questions or concerns about our services ?"
                            android:textColor="@color/black" />
                        <LinearLayout
                            android:id="@+id/lv5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioGroup
                                android:id="@+id/techresponsiveGPID"
                                android:gravity="left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/techextresId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Extremely responsive"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                                <RadioButton
                                    android:id="@+id/techveryresponId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Very responsive"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                                <RadioButton
                                    android:id="@+id/techsomewhatresId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Somewhat responsive"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                                <RadioButton
                                    android:id="@+id/technoresId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Not so responsive"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                                <RadioButton
                                    android:id="@+id/technotallresId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Not at all responsive"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                            </RadioGroup>
                        </LinearLayout>
                        <View
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:drawableRight="@drawable/starcolorred"
                            android:text="How did you book your call ?"
                            android:textColor="@color/black" />
                        <LinearLayout
                            android:id="@+id/lv6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioGroup
                                android:id="@+id/techHowbookGPID"
                                android:gravity="left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/techthomobiappId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Through mobile App"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                                <RadioButton
                                    android:id="@+id/techthouthwebId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Through Call2Solv Website"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                                <RadioButton
                                    android:id="@+id/techcallHelpNumberId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Calling our Call2Solv Heplline Number"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                            </RadioGroup>
                        </LinearLayout>
                        <View
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black"/>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:drawableRight="@drawable/starcolorred"
                            android:text="From where did you know about Call2Solv ?"
                            android:textColor="@color/black" />
                        <LinearLayout
                            android:id="@+id/lv7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioGroup
                                android:id="@+id/techfromwherdidknoGPID"
                                android:gravity="left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RadioButton
                                    android:id="@+id/techfrienId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Through Friends or Relatives"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                                <RadioButton
                                    android:id="@+id/techfromfedbackId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="From Facebook"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                                <RadioButton
                                    android:id="@+id/techHordingleftId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hoardings &amp; Leaflets"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                                <RadioButton
                                    android:id="@+id/techyutubId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Youtube"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                                <RadioButton
                                    android:id="@+id/techotherId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Others"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>
                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/viewId1"
                        android:layout_below="@+id/maintananceId"
                        android:layout_marginTop="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginLeft="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:drawableRight="@drawable/starcolorred"
                            android:text="How likely are you to recommend our company to a friend or colleague? :"
                            android:textColor="@color/black" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_marginLeft="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stepSize="1"
                            android:numStars="5"/>
                        <TextView
                            android:layout_marginLeft="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:text="Please share any additional comments or questions.  :"
                            android:textColor="@color/black" />
                        <EditText
                            android:id="@+id/reviewId"
                            android:layout_marginTop="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/blank_border_shape"
                            android:gravity="top|center"
                            android:hint="Please Write Something"
                            android:inputType="textMultiLine"
                            android:lines="6"
                            android:overScrollMode="always"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical" />
                        <Button
                            android:id="@+id/conbookingId"
                            android:layout_marginTop="10sp"
                            android:layout_marginLeft="50sp"
                            android:layout_marginRight="50sp"
                            android:text="FEEDBACK"
                            android:textColor="#ffffff"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/square_shado_shape"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

